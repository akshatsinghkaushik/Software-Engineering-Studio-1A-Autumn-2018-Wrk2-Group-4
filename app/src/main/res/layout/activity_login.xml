<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.softwaregroup4.group4_fitnessapplication.Login"
    android:background="#26a69a">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="219dp"
        android:layout_height="220dp"

        android:layout_above="@+id/UsernameText"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        app:srcCompat="@drawable/fitapplogo" />

    <EditText
        android:id="@+id/UsernameText"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="247dp"
        android:layout_marginHorizontal="55dp"
        android:background="#048b7a"
        android:drawableLeft="@drawable/ic_action_username_icon"
        android:ems="10"
        android:hint="Username"
        android:textColorHint="  @android:color/darker_gray"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_light"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/PasswordText"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="167dp"
        android:layout_marginHorizontal="55dp"
        android:background="#048b7a"
        android:drawableLeft="@drawable/ic_action_name"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@android:color/background_light"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="18dp" />

    <Button
        android:id="@+id/LoginButton"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp"
        android:background="#048b7a"
        android:onClick="onClick"
        android:text="@string/login" />

    <Button
        android:id="@+id/InitialRegisterButton"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:background="#048b7a"
        android:onClick="onClick"
        android:text="Register now!" />

    <TextView
        android:id="@+id/LOLDEETS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LoginButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="" />

</RelativeLayout>